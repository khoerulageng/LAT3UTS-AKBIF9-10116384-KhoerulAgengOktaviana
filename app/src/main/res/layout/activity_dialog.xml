<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogActivity">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/lr_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo2"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Game Addicted V1.0"
                android:fontFamily="@font/bungee_shade"
                android:textAlignment="center"
                android:layout_below="@+id/ic_logo"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textStyle="bold"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="by"
            android:fontFamily="@font/wellfleet"
            android:textAlignment="center"
            android:layout_below="@+id/lr_logo"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Khoerul Ageng"
            android:fontFamily="@font/wellfleet"
            android:textAlignment="center"
            android:layout_below="@+id/txt_by"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textStyle="bold"/>


    </RelativeLayout>

</RelativeLayout>